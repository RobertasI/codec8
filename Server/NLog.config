<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false">

  <variable name="ConsoleLayout" value="${message} ${newline}"/>

  <targets>

    <target xsi:type="ColoredConsole" name="coloredConsole" layout="${ConsoleLayout}"/>

  </targets>

  <rules>
    <logger name="consoleLogger" minlevel="Info" writeTo="coloredConsole"/>

  </rules>
</nlog>